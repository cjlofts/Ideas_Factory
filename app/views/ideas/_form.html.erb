<%= form_for @idea, :html => {:class => "form-horizontal"}  do |i| %>

  <% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>

  <div class="form-group">
    <%= i.label :title, "Title:", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= i.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= i.label :body, "Body:", class: "col-sm-1 control-label" %>
    <div class="col-sm-10">
      <%= i.text_area :body, class: "form-control", rows:"4" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10">
      <%= i.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
  <% end %>